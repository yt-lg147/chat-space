.message-bar
  %p チャットグループが作成されました。
.contents
  .side-bar
    .user-info
      .user-info__name
        %p user.name
      .user-info__icon
        = link_to fa_icon("edit"), root_path
        = link_to fa_icon("cog"), root_path
    .group-info
      / = @groups.each do |group|
      = render partial: "group-info-temp"#-, locals: { group: group }
  .chat-screen
    .chat-group
      %p group-name
