.message-bar
  %p チャットグループが作成されました。
.contents.clearfix
  .side-bar
    .user-info.clearfix
      .user-info__name
        %p user.name
      .user-info__icon
        = link_to fa_icon("edit"), root_path, class: "btn--white"
        = link_to fa_icon("cog"), root_path, class: "btn--white"
    .group-info
      / = @groups.each do |group|
      = render partial: "temp-group"#-, locals: { group: group }
  .chat-screen
    .chat-group.clearfix
      .selected-group
        .selected-group__name
          %p group.name
        .selected-group__member
          %p group.user.name
      .edit-btn
        = link_to "Edit", root_path, class: "btn--skyblue"
    .border
    .chat-post.clearfix
      / = @messages.each do |message|
      = render partial: "temp-post"#-, locals: { message: message }
    .chat-input
      %form
        .box
          %input.box__text(type="text" placeholder="type a message")
          .label-box
            %label
              = fa_icon("image")
              %input.label-box__file(type="file")
        .send-btn
          = link_to "Send", root_path, class: "btn--white"
